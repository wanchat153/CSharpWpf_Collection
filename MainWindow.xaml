<Window x:Class="CSharpWpf_Collection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpWpf_Collection"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="addBtn" Content="ADD" HorizontalAlignment="Left" Height="41" Margin="154,153,0,0" VerticalAlignment="Top" Width="135" Click="addBtn_Click"/>
        <Button x:Name="removeBtn" Content="Remove" HorizontalAlignment="Center" Height="41" Margin="0,153,0,0" VerticalAlignment="Top" Width="136" Click="removeBtn_Click"/>
        <TextBox x:Name="textName" HorizontalAlignment="Center" Height="33" Margin="0,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="490" FontSize="20" Background="#FFE5E5E5" BorderThickness="2,2,2,2" BorderBrush="#FF7A7A7A"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Center" Height="169" Margin="0,217,0,0" VerticalAlignment="Top" Width="488" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="20" Background="#FFD8FF8A" SelectionChanged="listBox_SelectionChanged"/>

    </Grid>
</Window>
